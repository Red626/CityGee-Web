@model OldHouse.Web.Models.LoginViewModel

@using (Html.BeginForm("Login", "Account", new { area="", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false,"",new { @class = "error"})

    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
    @Html.TextBoxFor(m => m.UserName, new { @class = "form-input email" })

    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
    @Html.PasswordFor(m => m.Password, new { @class = "form-input" })

    <div title="为了确保您的信息安全，不建议在网吧等公共环境勾选此项" data-toggle="tooltip" data-placement="top">
        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check" })<span onclick="checkMe(this,event)" style="cursor:pointer;">&nbsp;下次自动登录</span>
    </div>

    <input type="submit" value="登录" class="form-button" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
